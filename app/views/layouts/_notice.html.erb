<% flash.each do |msg_type, message| %>
    <div id="alrt" class="alert alert-success alert-dismissible fade show" role="alert" style="z-index: 999">
        <%= message %>
    </div>
  
    <style>
      #alrt {
        position: absolute;
        border-radius: 0px 32px 0px;
        background: linear-gradient(183deg,rgb(119 209 122), rgb(92 237 244));
       
      }
    </style>
  <% end %>